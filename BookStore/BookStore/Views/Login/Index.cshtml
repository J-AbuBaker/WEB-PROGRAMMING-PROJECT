@{
    ViewData["Title"] = "Login";
}

<div class="auth-container container d-flex flex-column flex-md-row align-items-center justify-content-center min-vh-100 gap-5">

    <!-- Left Column: Login Form -->
    <div class="w-100" style="max-width: 420px;">
        <h2 class="text-center mb-4">Login to Your Account</h2>

        <form class="p-4 bg-light border rounded shadow-sm" method="post" asp-controller="Login" asp-action="Index">
            <div class="form-group mb-3">
                <label for="Username" class="form-label">Username</label>
                <input id="Username" name="Username" class="form-control" placeholder="Enter your username" required />
            </div>

            <div class="form-group mb-3">
                <label for="Password" class="form-label">Password</label>
                <input id="Password" name="Password" type="password" class="form-control" placeholder="Enter your password" required />
            </div>

            <button type="submit" class="btn btn-danger w-100 mt-3">Login</button>

            @if (ViewBag.Error != null)
            {
            <div class="alert alert-danger mt-3 text-center" role="alert">
                @ViewBag.Error
            </div>
            }
        </form>

        <div class="text-center mt-3">
            <span>Don't have an account?</span>
            <a asp-controller="Register" asp-action="Index" class="fw-bold">Register</a>
        </div>
    </div>

    <div class="d-none d-md-block">
        <img src="https://images.unsplash.com/photo-1512820790803-83ca734da794"
             alt="Login Illustration"
             style="max-width: 500px; height: auto; border-radius: 8px;" />
    </div>
</div>

