
@model Product_app.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h2>Book Details</h2>
<table class="table table-bordered">
    <tr><th>ID</th><td>@Model.BookID</td></tr>
    <tr><th>Title</th><td>@Model.Title</td></tr>
    <tr><th>Author</th><td>@Model.Author</td></tr>
    <tr><th>ISBN</th><td>@Model.ISBN</td></tr>
    <tr><th>Genre</th><td>@Model.Genre</td></tr>
    <tr><th>Description</th><td>@Model.Description</td></tr>
    <tr><th>Price</th><td>@Model.Price.ToString("C2")</td></tr>
    <tr><th>Stock Quantity</th><td>@Model.StockQuantity</td></tr>
    <tr><th>Rating</th><td>@Model.Rating</td></tr>
    <tr><th>Publish Date</th><td>@Model.PublishDate.ToShortDateString()</td></tr>
    <tr><th>Featured</th><td>@Model.IsFeatured</td></tr>
</table>
<a asp-action="List" class="btn btn-primary">Back to List</a>
