@{
    ViewData["Title"] = "Home - Digital Bookstore";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome to <span class="text-primary">Digital Bookstore</span></h1>
        <p class="lead text-muted">Browse, manage, and favorite top-tier technical books curated for developers and professionals.</p>
    </div>

    <div class="row text-center mt-5">
        <div class="col-md-4">
            <i class="bi bi-book-half display-6 text-primary"></i>
            <h5 class="mt-3">Extensive Library</h5>
            <p class="text-muted">Access a collection of the best books in software development, AI, and data science.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-star display-6 text-warning"></i>
            <h5 class="mt-3">Favorite Your Reads</h5>
            <p class="text-muted">Mark your favorite books and revisit them anytime through your personal profile.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-person-lines-fill display-6 text-success"></i>
            <h5 class="mt-3">User Profiles</h5>
            <p class="text-muted">Track your added books, favorites, and manage your account with ease.</p>
        </div>
    </div>
</div>

